<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全屏显示" />

    <Button
        android:id="@+id/btStatusBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全屏保留状态栏文字(页面上部有Banner图)" />

    <Button
        android:id="@+id/btStatusBarSameColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置状态栏颜色" />


    <Button
        android:id="@+id/btFragmentStatusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不同Fragment中对StatusBar的处理不一样" />
</LinearLayout>